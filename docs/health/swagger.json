{
    "paths": {
        "/api/v1/health": {
            "get": {
                "tags": [
                    "Health"
                ],
                "summary": "서버 및 DB 상태 확인 (Health Check)",
                "description": "서버의 Liveness와 Readiness(DB 연결) 상태를 반환합니다.",
                "responses": {
                    "200": {
                        "description": "정상 (DB 연결 성공)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "ok"
                                        },
                                        "database": {
                                            "type": "string",
                                            "example": "connected"
                                        },
                                        "timestamp": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "503": {
                        "description": "서비스 불가 (DB 연결 실패)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "database": {
                                            "type": "string",
                                            "example": "disconnected"
                                        },
                                        "timestamp": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}